<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pasoon.tipcalculator.SettingsFragment"
    android:background="@drawable/backgroundingeneral">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SettingsText"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:gravity="center_horizontal"
                android:text="Settings"
                android:textColor="@color/green"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CurrencyTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Currency Type:"
                android:textColor="@color/green"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/CurrencySpinner"
                android:layout_width="167dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_weight="0.66" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/green"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/DefaultTipPercentageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Default Tip Percentage:"
                android:textColor="@color/green"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/DefaultTipPercentage"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter Value Here"
                android:inputType="number|numberDecimal"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_weight="0.20"
                android:background="@color/green"
                android:onClick="updateSettingsButtonClicked"
                android:text="Update Settings" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
